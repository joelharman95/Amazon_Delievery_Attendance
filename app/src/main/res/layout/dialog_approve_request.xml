<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_normal"
        android:text="Approve Request"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMessge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:padding="@dimen/spacing_small"
        android:text="Are you sure want to approve this leave request?"
        app:layout_constraintTop_toBottomOf="@id/tvHeader" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:padding="@dimen/spacing_normal"
        android:text="@string/action_ok"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessge" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_small"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/action_cancel"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/tvOk"
        app:layout_constraintEnd_toStartOf="@id/tvOk"
        app:layout_constraintTop_toTopOf="@id/tvOk" />

</androidx.constraintlayout.widget.ConstraintLayout>